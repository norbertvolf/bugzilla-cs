<hr>

<table>
  <tr>
    <td colspan="2">
      <b>Obecné volby:</b>
    </td>
  </tr>

  <tr>
    <td width="150"></td>
    <td>
      [% prefname = "email-$constants.REL_ANY-$constants.EVT_FLAG_REQUESTED" %]
      <input type="checkbox" name="[% prefname %]" id="[% prefname %]" 
        value="1"
        [% " checked" IF 
                  mail.${constants.REL_ANY}.${constants.EVT_FLAG_REQUESTED} %]>
